{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5"
  },

  "exclude": [
    "node_modules",
    "wwwroot"
  ],

  "compileOnSave": true,
  "types": [
    // add node as an option
    "node"
  ],
  // typeroots option has been previously configured
  "typeroots": [
    // add path to @types
    "../script/"
  ]


}
